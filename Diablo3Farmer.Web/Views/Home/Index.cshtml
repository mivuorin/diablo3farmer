@using System.Web.Optimization
@model dynamic

<!DOCTYPE html>
<html xmlns:ng="http://angularjs.org" ng-app="Diablo3Farmer" lang="en">
    <head>
        <title>Diablo 3 Farmer</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        @Styles.Render("~/css")
    </head>
    <body>
        <div class="container" ng-controller="FarmRunController">
            <div class="jumbotron">
                <h1>Diablo 3 Farmer</h1>
                <p>Awesome AngularJS app</p>
            </div>
            <div class="row">
                <div class="form-inline">
                    <div ng-show="!runStarted()" class="col-lg-12">
                        <div class="form-group input-group-sm">
                            <label for="name" class="control-label">Run:</label>
                            <input id="name" type="text" ng-model="name" class="form-control" typeahead="name for name in getRunNames() | filter:$viewValue" />
                        </div>
                        <div class="form-group input-group-sm">
                            <label for="mpSelection" class="control-label">MP:</label>
                            <select id="mpSelection" class="form-control" ng-model="selectedMonsterPowerLevel" ng-options="mp for mp in monsterPowerLevels"></select>
                        </div>
                        <div class="form-group input-group-sm">
                            <label for="actSelection" class="control-label">Act:</label>
                            <select id="actSelection" class="form-control" ng-model="selectedAct" ng-options="act as act.name for act in acts"></select>
                        </div>
                        <div class="form-group input-group-sm">
                            <label for="startingExp" class="control-label">Start Exp:</label>
                            <input id="startingExp" type="text" ng-model="startExp" class="form-control"/>
                        </div>
                        <div class="form-group input-group-sm">
                            <button ng-click="startRun()" class="btn btn-default">Start run!</button>
                        </div>
                    </div>
                    <div ng-show="runStarted()" class="col-lg-12">
                        <div class="form-group input-group-sm">
                            <label for="endExp">End exp:</label>
                            <input id="endExp" type="text" ng-model="endExp" class="form-control" />
                        </div>
                        <button ng-click="endRun()" class="btn btn-default">End run.</button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-striped">
                        <tr>
                            <th>Run name</th>
                            <th>MP</th>
                            <th>Act</th>
                            <th>Start Exp</th>
                            <th>End Exp</th>
                            <th>Exp / hour</th>
                        </tr>
                        <tbody ng-repeat="(groupName, group) in runs track by $index">
                            <tr ng-repeat="run in group track by $index">
                                <td rowspan="{{group.length}}" ng-if="$first">{{groupName}}</td>
                                <td>{{run.monsterPowerLevel}}</td>
                                <td>{{run.act.value}}</td>
                                <td>{{run.startExp | number:0 }}</td>
                                <td>{{run.endExp | number:0 }}</td>
                                <td>{{run.expPerHour | number:0 }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        @Scripts.Render("~/js/lib")
        @Scripts.Render("~/js")
    </body>
</html>