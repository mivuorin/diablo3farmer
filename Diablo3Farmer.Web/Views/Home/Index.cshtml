@using System.Web.Optimization
@model dynamic

<!DOCTYPE html>
<html xmlns:ng="http://angularjs.org" ng-app="Diablo3Farmer" lang="en">
    <head>
        <title>Diablo 3 Farmer</title>
        @Styles.Render("~/css")
    </head>
    <body>
        TODO
        <ul>
            <li>Fix UI</li>
            <li>Fix scripts locations to follow angular seed project</li>
            <li>Add angular end to end test</li>
            <li>Group runs by name</li>
            <li>Add run name suggestions feature</li>
            <li>Delete run feature</li>
            <li>Gold / hour feature</li>
